---
import Nextjsicon from "./icons/Nextjsicon.astro";
import HtmlIcon from "./icons/HtmlIcon.astro";
import Cssicon from "./icons/Cssicon.astro";
import Js from "./icons/Js.astro";
import React from "./icons/React.astro";
import Astroicon from "./icons/Astroicon.astro";
import CssTailwind from "./icons/CssTailwind.astro";
import Vite from "./icons/Vite.astro";
import Node from "./icons/Node.astro";
import Sql from "./icons/Sql.astro";
import Github from "./icons/Giticon.astro";
import Link from "./icons/LinkWeb.astro";

const TAGS = {
  NEXT: {
    name: "NextJS",
    class: "bg-black text-white",
    icon: Nextjsicon,
  },
  HTML: {
    name: "Html",
    class: "bg-[#D6480B] text-black",
    icon: HtmlIcon,
  },

  CSS: {
    name: "CSS",
    class: "bg-[#1A62B0] text-white",
    icon: Cssicon,
  },

  JS: {
    name: "Javascript",
    class: "bg-[#EFD81C] text-black",
    icon: Js,
  },
  REACT: {
    name: "React",
    class: "bg-black text-yellow",
    icon: React,
  },

  ASTRO: {
    name: "Astro",
    class: "bg-black text-yellow",
    icon: Astroicon,
  },

  TAILWIND: {
    name: "TailwindCSS",
    class: "bg-black text-yellow",
    icon: CssTailwind,
  },

  VITE: {
    name: "Vite",
    class: "bg-black text-yellow",
    icon: Vite,
  },
  NODE: {
    name: "NODEjs",
    class: "bg-black text-yellow",
    icon: Node,
  },

  SQL: {
    name: "SQL",
    class: "bg-black text-yellow",
    icon: Sql,
  },
};

const PROJECTOS = [


{
    title: "PokeAppi",
    description:
      "Una PokeApi modelo de una pokedex que trae los datos de los primeros 200 pokemon",
    link: "https://poke-api-kohl-delta.vercel.app/",
    foto: "https://i.imgur.com/mQsG9Q8.png",
    github: "https://github.com/Oquismo/PokeApi",
    tags: [
      TAGS.ASTRO,
      TAGS.JS,
      TAGS.TAILWIND,
    ],
  },
{
    title: "Página buscador de vuelos",
    description:
      "Uno de mis primeros proyectos, desarrollado cuando comenzaba a aprender HTML y CSS.",
    link: "https://javanair.netlify.app/",
    foto: "https://i.imgur.com/JyhdR6a.png",
    github: "https://github.com/Oquismo/FirstLanding",
    tags: [
      TAGS.HTML,
      TAGS.CSS,
    ],
  },
  {
    title: "Proyecto F1",
    description:
      "Página web básica inspirada en la Fórmula 1, diseñada para ofrecer noticias, calendario de carreras y acceso a merchandising.",
    link: "https://f1proyect.netlify.app/",
    foto: "https://i.imgur.com/LFHVJ9H.png",
    github: "https://github.com/Oquismo/Proyecto-Formula-1-FE",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JS],
  },
  {
    title: "Proyecto F1 avanzado",
    description:
      "Proyecto realizado como trabajo final del máster en desarrollo web. Incluye una base de datos de pilotos y escuderías, una galería de imágenes y una sección para comprar artículos relacionados.",
    link: "https://www.projectlonsu.com/",
    foto: "https://i.imgur.com/dthIRMs.png",
    github: "https://github.com/Oquismo/subir_nano",
    tags: [
      TAGS.NODE,
      TAGS.VITE,
      TAGS.REACT,
      TAGS.JS,
      TAGS.NEXT,
      TAGS.HTML,
      TAGS.CSS,
    ],
  },

  // {
  //   title: "Portfolio",
  //   description:
  //     "Portfolio personal para mostrar mis conocimientos y aptitudes asi como los proyectos que he realizado y estoy realizando",
  //   link: "/",
  //   foto: "https://i.ibb.co/rxnqrYV/533shots-so.png",
  //   github: "https://github.com/Oquismo/portfolio",
  //   tags: [TAGS.HTML, TAGS.TAILWIND, TAGS.ASTRO, TAGS.JS],
  // },
];
---

{
  PROJECTOS.map(({ title, github, description, link, foto, tags }) => (
    <article class="px-4 sm:px-9 md:px-12  ">
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-1 text-pretty">{description}</p>
      <span class="flex gap-x-2 rounded-full  text-xs py-1 px-1">
        <a href={github}>
          <Github class="size-6 mb-2" />
        </a>
        <a href={link}>
          <Link class="size-6 mb-2" />
        </a>
      </span>
      <ul class="flex gap-x-2 pb-1 flex-wrap">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-2 px-2`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class=" hover:scale-95
    hover:shadow-lg
    rounded
    shadow-2xl
    shadow-white/10
    transition-all
    ease-in-out
    duration-300 "
        src={foto}
        alt="Captura de mi porjecto"
      />
    </article>
  ))
}

